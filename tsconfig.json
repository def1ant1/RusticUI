{
  "compilerOptions": {
    "module": "esnext",
    // aligning with Node18 recommendation: https://www.npmjs.com/package/@tsconfig/node18
    "target": "es2022",
    "lib": ["es2020", "dom", "dom.iterable"],
    "jsx": "preserve",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": false,
    "allowJs": true,
    "paths": {
      // The archived JavaScript workspaces live under `archives/mui-packages/` to keep historical
      // sources accessible without polluting the Rust-first crates. TypeScript still resolves
      // against those folders so editors jump straight to the snapshot when developers inspect
      // legacy APIs.
      "@mui/material": ["./archives/mui-packages/mui-material/src"],
      "@mui/material/package.json": ["./archives/mui-packages/mui-material/package.json"],
      "@mui/material/*": ["./archives/mui-packages/mui-material/src/*"],
      "@mui/lab": ["./archives/mui-packages/mui-lab/src"],
      "@mui/lab/*": ["./archives/mui-packages/mui-lab/src/*"],
      "@mui/internal-markdown": ["./packages/markdown"],
      "@mui/internal-markdown/*": ["./packages/markdown/*"],
      "@mui/styled-engine": ["./archives/mui-packages/mui-styled-engine/src"],
      "@mui/styled-engine/*": ["./archives/mui-packages/mui-styled-engine/src/*"],
      "@mui/styled-engine-sc": ["./archives/mui-packages/mui-styled-engine-sc/src"],
      "@mui/styled-engine-sc/*": ["./archives/mui-packages/mui-styled-engine-sc/src/*"],
      "@mui/system": ["./archives/mui-packages/mui-system/src"],
      "@mui/system/package.json": ["./archives/mui-packages/mui-system/package.json"],
      "@mui/system/*": ["./archives/mui-packages/mui-system/src/*"],
      "@mui/types": ["./archives/mui-packages/mui-types/src"],
      "@mui/private-theming": ["./archives/mui-packages/mui-private-theming/src"],
      "@mui/private-theming/*": ["./archives/mui-packages/mui-private-theming/src/*"],
      "@mui/utils": ["./archives/mui-packages/mui-utils/src"],
      "@mui/utils/*": ["./archives/mui-packages/mui-utils/src/*"],
      "@mui/docs": ["./archives/mui-packages/mui-docs/src"],
      "@mui/docs/*": ["./archives/mui-packages/mui-docs/src/*"],
      "@mui/material-nextjs": ["./archives/mui-packages/mui-material-nextjs/src"],
      "@mui/material-nextjs/*": ["./archives/mui-packages/mui-material-nextjs/src/*"],
      "@mui/joy": ["./archives/mui-packages/mui-joy/src"],
      "@mui/joy/package.json": ["./archives/mui-packages/mui-joy/package.json"],
      "@mui/joy/*": ["./archives/mui-packages/mui-joy/src/*"],
      "@mui/icons-material": [
        "./archives/mui-packages/mui-icons-material/lib/esm/index.js"
      ],
      "@mui/icons-material/*": ["./archives/mui-packages/mui-icons-material/lib/esm/*"],
      "@mui/internal-docs-utils": ["./packages-internal/docs-utils/src"],
      "@mui/internal-scripts/typescript-to-proptypes": [
        "./packages-internal/scripts/typescript-to-proptypes/src"
      ],
      "@mui/internal-scripts/generate-llms-txt": [
        "./packages-internal/scripts/generate-llms-txt/src"
      ],
      "@mui/internal-test-utils": ["./packages-internal/test-utils/src"],
      "@mui/internal-test-utils/*": ["./packages-internal/test-utils/src/*"],
      "@mui/stylis-plugin-rtl": ["./archives/mui-packages/mui-stylis-plugin-rtl/src"],
      "@mui/stylis-plugin-rtl/*": ["./archives/mui-packages/mui-stylis-plugin-rtl/src/*"],
      "docs/*": ["./docs/*"]
    },
    // Otherwise we get react-native typings which conflict with dom.lib.
    "types": ["node", "react", "mocha"]
  },
  "exclude": ["**/.*/", "**/build", "**/node_modules", "docs/export"]
}
